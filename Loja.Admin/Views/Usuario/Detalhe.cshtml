@model Usuario
@{
    ViewData["title"] = "Detalhe de Usuário";
}

@section breadCrumb
{
    <li class="breadcrumb-item"><a asp-action="Index">Usuarios</a></li>
    <li class="breadcrumb-item active">Detalhe de Usuário</li>
}


<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Detahe de Usuário</h3>
                </div>
                <form asp-action="Salvar" method="POST">
                    <input asp-for="ID" type="hidden" />
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Nome">Nome</label>
                            <input asp-for="Nome" class="form-control" placeholder="Nome" />
                            <span class="text-danger" asp-validation-for="Nome"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Login">Login</label>
                            @if (Model.ID > 0)
                            {
                                <input type="text" disabled class="form-control" value="@Model.Login">
                            }
                            else
                            {
                                <input asp-for="Login" type="text" class="form-control" placeholder="Login">
                                <span class="text-danger" asp-validation-for="Login"></span>
                            }
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="@Url.Content("~/plugins/jquery-validation/jquery.validate.js")"></script>
    <script src="@Url.Content("~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js")"></script>
}
